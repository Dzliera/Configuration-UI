@using Newtonsoft.Json.Linq
@inherits EditorComponentBase

@switch (Schema.Type)
{
    case JsonObjectType.String:
        <TextEditor Schema="Schema" Token="Token" Key="Key"></TextEditor>
        break;
    case JsonObjectType.Integer:
        <IntegerEditor Schema="Schema" Token="Token" Key="Key"></IntegerEditor>
        break;
    case JsonObjectType.Number:
        <NumberEditor Schema="Schema" Token="Token" Key="Key"></NumberEditor>
        break;
    case JsonObjectType.Boolean:
        <BooleanEditor Schema="Schema" Token="Token" Key="Key"></BooleanEditor>
        break;
    default:
    {
        if (Schema.IsEnumeration)
        {
            <EnumEditor Schema="Schema" Token="Token" Key="Key"></EnumEditor>
        }
        break;
    }
}
