@inherits EditorComponentBase

<MudTextField @bind-Value="Value" Label="@Schema.Title">

</MudTextField>

@code
{
    private string _value;
    
    private string Value
    {
        get => _value;
        set => SetValue(value);
    }
    
    /// <inheritdoc />
    protected override void OnParametersSet()
    {
        if (Schema.Type != JsonObjectType.String)
            throw new ArgumentException($"Invalid schema type for TextEditor. Expected string, got {Schema.Type}");

        if (Token.Type != JTokenType.String)
            throw new ArgumentException("NumberEditor is associated to value of wrong type. " + 
                                        $"Expected string, got {Schema.Type}");

        _value = (string) Token;
    }
    
    private void SetValue(string value)
    {
        _value = value;
        Token = _value;
    }
}